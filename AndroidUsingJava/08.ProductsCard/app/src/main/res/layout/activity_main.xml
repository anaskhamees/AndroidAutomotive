<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteX="4dp"
    tools:layout_editor_absoluteY="-22dp"
    tools:visibility="visible">

    <ImageView
        android:id="@+id/imageID"
        android:layout_width="268dp"
        android:layout_height="134dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="191dp"
        android:layout_height="46dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toEndOf="@+id/ratingID"
        app:layout_constraintTop_toBottomOf="@+id/descriptionValuID" />

    <ImageButton
        android:id="@+id/leftArrowID"
        android:layout_width="61dp"
        android:layout_height="93dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageID"
        app:srcCompat="@android:drawable/ic_media_rew" />

    <ImageButton
        android:id="@+id/rightArrowID"
        android:layout_width="64dp"
        android:layout_height="98dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageID"
        app:srcCompat="@android:drawable/ic_media_ff" />

    <TextView
        android:id="@+id/titleID"
        android:layout_width="110dp"
        android:layout_height="44dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="8dp"
        android:text="@string/Title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/leftArrowID" />

    <TextView
        android:id="@+id/TitleVal"
        android:layout_width="131dp"
        android:layout_height="46dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="8dp"
        android:text="@string/titleVal"
        app:layout_constraintStart_toEndOf="@+id/titleID"
        app:layout_constraintTop_toBottomOf="@+id/rightArrowID" />

    <TextView
        android:id="@+id/priceID"
        android:layout_width="106dp"
        android:layout_height="37dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="12dp"
        android:text="@string/price"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleID" />

    <TextView
        android:id="@+id/priceValuID"
        android:layout_width="130dp"
        android:layout_height="41dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="8dp"
        android:text="@string/priceVal"
        app:layout_constraintStart_toEndOf="@+id/priceID"
        app:layout_constraintTop_toBottomOf="@+id/TitleVal" />

    <TextView
        android:id="@+id/BrandID"
        android:layout_width="99dp"
        android:layout_height="38dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="16dp"
        android:text="@string/band"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/priceID" />

    <TextView
        android:id="@+id/brandValuID"
        android:layout_width="127dp"
        android:layout_height="38dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="20dp"
        android:text="@string/brandVal"
        app:layout_constraintStart_toEndOf="@+id/BrandID"
        app:layout_constraintTop_toBottomOf="@+id/priceValuID" />

    <TextView
        android:id="@+id/descriptionID"
        android:layout_width="97dp"
        android:layout_height="33dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="16dp"
        android:text="@string/description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BrandID" />

    <TextView
        android:id="@+id/descriptionValuID"
        android:layout_width="125dp"
        android:layout_height="33dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="12dp"
        android:text="@string/descriptionval"
        app:layout_constraintStart_toEndOf="@+id/descriptionID"
        app:layout_constraintTop_toBottomOf="@+id/brandValuID" />

    <TextView
        android:id="@+id/ratingID"
        android:layout_width="99dp"
        android:layout_height="35dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="24dp"
        android:text="@string/rating"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descriptionID" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp" />
</androidx.constraintlayout.widget.ConstraintLayout>